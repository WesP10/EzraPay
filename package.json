    "express": "^4.18.3",
    "firebase": "^10.8.0",
    "firebase-admin": "^12.0.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.13.2",
    "multer": "^1.4.5-lts.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.24",
