{
  "name": "ezrapay",
  "version": "1.0.0",
  "description": "A full-stack payment application with Solana integration",
  "main": "dist/src/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/src/server.js",
    "build": "tsc",
    "dev": "tsc && node dist/src/server.js",
